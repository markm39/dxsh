# Workflow Engine Environment Configuration
# Copy this file to .env and update the values

# Database
DATABASE_URL=postgresql://workflow:workflow@localhost:5432/workflow_engine

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
VALID_API_KEYS=your-api-key-1,your-api-key-2

# Python Executor
PYTHON_EXECUTOR_URL=http://localhost:8080
MAX_EXECUTION_TIME=300
MAX_MEMORY=1G

# Playwright (Web Scraping)
# Leave this commented out to use Playwright's default browser location
# Only set if you need browsers in a specific location (e.g., Docker container)
# PLAYWRIGHT_BROWSERS_PATH=/custom/path/to/browsers

# Optional: OpenAI for AI nodes
OPENAI_API_KEY=your-openai-api-key

# Flask
FLASK_ENV=development
FLASK_DEBUG=True