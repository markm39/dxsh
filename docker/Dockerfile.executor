FROM python:3.11

WORKDIR /app

# Install common data science packages
RUN pip install \
    pandas==2.1.4 \
    numpy==1.26.2 \
    matplotlib==3.8.2 \
    seaborn==0.13.0 \
    scikit-learn==1.3.2 \
    requests==2.31.0 \
    beautifulsoup4==4.12.2

# Create non-root user for execution
RUN useradd -m -u 1000 executor
USER executor

COPY executor.py .

CMD ["python", "executor.py"]
