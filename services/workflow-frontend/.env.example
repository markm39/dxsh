# Workflow Frontend Environment Configuration

# API Gateway URL - The single entry point for all microservices
VITE_API_BASE_URL=http://localhost:8001

# Application Settings  
VITE_APP_NAME=Dxsh Workflow Builder
VITE_APP_VERSION=1.0.0

# Environment Mode
VITE_NODE_ENV=development

# Dashboard Frontend URL (for dashboard links)
VITE_DASHBOARD_FRONTEND_URL=http://localhost:3001

# Authentication Settings
VITE_AUTH_ENABLED=true
VITE_SESSION_TIMEOUT=3600

# Production Example:
# VITE_API_BASE_URL=https://api.yourdomain.com
# VITE_DASHBOARD_FRONTEND_URL=https://dashboard.yourdomain.com