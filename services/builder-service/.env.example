# Builder Service Environment Configuration

# API Gateway URL - The single entry point for all microservices
VITE_API_BASE_URL=http://localhost:5000

# Application Settings  
VITE_APP_NAME=Dxsh Workflow Builder
VITE_APP_VERSION=1.0.0

# Environment Mode
VITE_NODE_ENV=development

# Dashboard Service URL (for direct connections if needed)
# Note: Generally should go through API Gateway
VITE_DASHBOARD_SERVICE_URL=http://localhost:5002

# Authentication Settings
VITE_AUTH_ENABLED=true
VITE_SESSION_TIMEOUT=3600